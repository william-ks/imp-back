{
    "compilerOptions": {
        "lib": [
            "ES2023"
        ],
        "target": "ES2022",
        "module": "CommonJS",
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@application/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
    ],
}